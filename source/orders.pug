extends ./templates/base

block title
	title Orders

block main
	.wrapper.wrapper--orders
		include ./templates/header
		section.breadcrumb
			.container
				.breadcrumb_block
					ul.clearfix
						li
							a(href='./') Главная
						li.
							Заказы клиента
		section.orders
			.container
				h2 Заказы клиента
				.table-responsive
					table.table
						thead
							mixin tablehead(order, data)
								tr
									td.table-col-1.table-img
										p= order
										p= data
									td.table-col-2.table-name
										p.
											Название
									td.table-col-3.table-quantity
										p.
											Количество
									td.table-col-4.table-cost
										p.
											Цена
									td.table-col-5.table-total
										p.
											Сумма
							+tablehead('Заказ №1', '05.02.18')
							tbody
								mixin tablebody(pic, name, char1, char2, char3, quantity, cost, total)
									tr
										td.table-col-1
											.table-img
												img(src=require("./components/images/" + pic), alt="")
										td.table-col-2
											.table-name
												h6= name
												p
													span= char1
													br
													span= char2
													br
													span= char3
										td.table-col-3
											.table-quantity
												p= quantity
										td.table-col-4
											.table-cost
												p= cost
													span  руб.
										td.table-col-5
											.table-total
												p= total
													span  руб.
								+tablebody('pic-1.png', 'Колодка Тормозная', 'Код: 6793-3903-34', 'Артикул: 43253-2402011-40', 'Вес: 20 кг', '100', '7203', '7203')
								+tablebody('pic-2.png', 'Колодка Тормозная', 'Код: 6793-3903-34', 'Артикул: 43253-2402011-40', 'Вес: 20 кг', '2', '7203', '7203')
				mixin ordertotal(total)
					.orders_total
						p.
							Сумма заказа:
						span= total
				+ordertotal('14 406 руб.')
				.table-responsive
					table.table
						thead
							+tablehead('Заказ №2', '06.02.18')
						tbody
							+tablebody('pic-3.png', 'Колодка Тормозная', 'Код: 6793-3903-34', 'Артикул: 43253-2402011-40', 'Вес: 20 кг', '57', '7203', '7203')
							+tablebody('pic-4.png', 'Колодка Тормозная', 'Код: 6793-3903-34', 'Артикул: 43253-2402011-40', 'Вес: 20 кг', '9', '7203', '7203')
				+ordertotal('14 406 руб.')
		include ./templates/viewed
		include ./templates/footer